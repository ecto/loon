; Merge class strings: [cx "foo" "bar"] => "foo bar"
[defn cx [& classes]
  [|> classes
    [filter [fn [c] [not [= c ""]]]]
    [filter [fn [c] [not [= c ""]]]]
    [join " "]]]

; Merge style maps: [sx {:color "red"} {:padding "1rem"}] => {:color "red" :padding "1rem"}
[defn sx [& maps]
  [fold {} [fn [acc m] [merge acc m]] maps]]

; Conditional class: [when-class true "active"] => "active", [when-class false "active"] => ""
[defn when-class [condition class-name]
  [if condition class-name ""]]
