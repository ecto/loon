; app.loon â€” Root component, route table, layout

; --- Route Table ---
[fn route-table []
  #[
    #["/" home-page]
    #["/tour" tour-page]
    #["/play" play-page]
    #["/blog" blog-page]
  ]]

; --- App Component ---

[fn app []
  [let path [dom/location]]
  [let routes [route-table]]
  [let page-fn [match-route path routes]]
  [div {:class "app"}
    [page-fn]]]

; --- Boot ---

[fn main []
  [mount "#app" [app]]]
