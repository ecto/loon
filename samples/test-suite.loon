[fn fib [n]
  [match n
    0 0
    1 1
    n [+ [fib [- n 1]] [fib [- n 2]]]]]

[fn greet [name]
  [str "hello, " name "!"]]

[test test-fib []
  [assert-eq [fib 0] 0]
  [assert-eq [fib 1] 1]
  [assert-eq [fib 10] 55]]

[test test-greet []
  [assert-eq [greet "world"] "hello, world!"]]

[test test-arithmetic []
  [assert-eq [+ 1 2] 3]
  [assert-eq [* 6 7] 42]]
